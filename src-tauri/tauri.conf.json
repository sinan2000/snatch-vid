{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnatchVid",
  "version": "1.0.0",
  "identifier": "com.snatchvid-sns.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SnatchVid - Powered by SNS Automation",
        "width": 800,
        "height": 600,
        "minWidth": 450
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/yt-dlp_macos",
      "bin/ffmpeg_macos_arm" 
    ],
    "shortDescription": "SnatchVid is a video downloader app powered by SNS Automation",
    "longDescription": "SnatchVid is a video downloader app powered by SNS Automation that allows you to download videos from various platforms like YouTube, Facebook, Instagram, and many more in preferred formats."
  }
}